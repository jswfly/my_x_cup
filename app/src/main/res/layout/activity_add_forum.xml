<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/topic_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/red4">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_white"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/publishForum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>

        </RelativeLayout>
        
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dp"
            android:layout_marginRight="15.0dp"
            android:layout_marginTop="15.0dp"
            android:background="@drawable/edittext_bg_shape"
            android:gravity="top"
            android:hint="随便说点什么吧"
            android:inputType="textMultiLine"
            android:minHeight="170.0dp"
            android:padding="14.0dp"
            android:textColor="@color/black"
            android:textColorHint="#ffcbcbcb"
            android:textSize="16.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="添加照片"/>

        <GridView
            android:id="@+id/gvImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/space_size"
            android:numColumns="3"
            android:verticalSpacing="5dp" />


        <LinearLayout
            android:id="@+id/txtLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.0dp"
            android:layout_marginRight="14.0dp"
            android:layout_marginTop="10.0dp"
            android:background="@drawable/edittext_bg_shape"
            android:orientation="vertical"
            android:paddingBottom="8.0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8.0dp"
            android:text="选择你的话题标签"
            android:textColor="#ffcbcbcb"
            android:textSize="16.0sp" />

        </LinearLayout>





    <!--<GridView-->
        <!--android:id="@+id/gvLabels"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
